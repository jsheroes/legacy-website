{
    "extends": ["standard", "plugin:react/recommended"],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true
    },
    "rules": {
        "semi": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 0,
        "react/prop-types": 1,
        "react/display-name": 1,
        "complexity": [2, 5],
        "max-statements": [2, 7],
        "max-statements-per-line": [2, {
            "max": 1
        }],
        "max-nested-callbacks": [2, 3],
        "max-depth": [2, {
            "max": 2
        }],
        "no-param-reassign": 2,
        "no-var": 2,
        "prefer-const": 2
    }
}